<h2>Comments</h2>

<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <%=simple_format comment.body %>
  </div>
<% end %>
</div>

<h2>New Comment</h2>

<% form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Submit", :class => "css3button" %></p>
<% end %>