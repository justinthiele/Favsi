<%= content_for :title, "Favsi - Browse Lists" %>

<div id="browse-more"><%= link_to "Search Lists", search_path %></div>
<h1>Browse Lists</h1>

<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag), :class => css_class %>
<% end %>

<hr>

<div id="lists">
<% @lists.each do |list| %>
	<div id="newest-list-item">

	<div id="sm-author-avatar"><%= image_tag sm_avatar_url(list.user) %></div>
    <p><strong><%= link_to list.title, user_list_path(list.user, list) %></strong> by <%= link_to list.user.username, list.user %><br />Published: <%= list.updated_at.strftime("%B %d, %Y")%><br /><% if list.tag_list.present? %>Tags: <% for tag in list.tags %><%= link_to tag.name, tag_path(tag) %>, <% end %><% end %></p>

	</div>
<% end %>

</div>

<%= paginate @lists %>







