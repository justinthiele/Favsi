<%= content_for :title, "Favsi - Login" %>

<h1>Login</h1>

<div id="standard_auth">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="field">
	<label class="input">
	    <span><%= f.label :username %></span>
  	<%= f.text_field :username %>
	</label>
</div>

<div class="field">
	<label class="input">
	    <span><%= f.label :password %></span>
  	<%= f.password_field :password %>
	</label>
</div>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Login", :class => "css3button" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>

<div id="external_auth">
  <p><strong>Or login with one of these:</strong></p>
  <p>
  <a href="/auth/facebook"><%= image_tag "sign-in-with-facebook.png", :size => "151x24", :alt => "Sign in with Facebook" %></a>
  </p>
  <p>
  <a href="/auth/twitter"><%= image_tag "sign-in-with-twitter.png", :size => "151x24", :alt => "Sign in with Twitter" %></a>
  </p>
</div>

<div id="clear_floats"></div>
